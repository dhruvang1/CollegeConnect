<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="iitd.collegeconnect">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Globals"
        android:allowBackup="true"
        android:icon="@drawable/college_connect_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".AddEvent" />
        <activity android:name=".EditProfile" />
        <activity android:name=".Feed" />
        <activity android:name=".SidePan" />
        <activity android:name=".Profile" />
        <activity android:name=".ProfileSearch" />
        <activity android:name=".ProfileSearchList" />
        <activity android:name=".About" />
        <activity android:name=".Conversation" />
        <activity android:name=".ConversationNew" />
        <activity android:name=".Chat"></activity>
    </application>

</manifest>