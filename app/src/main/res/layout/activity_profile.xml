<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iitd.collegeconnect.Profile">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_contact"
            android:layout_weight="0.10"
            android:gravity="right"
            android:hint="Contact" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/profile_image"
            android:adjustViewBounds="true"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:layout_weight="0.10"
            android:textSize="25sp"
            android:gravity="center"
            android:hint="Name" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_bio"
            android:layout_weight="0.10"
            android:textSize="25sp"
            android:hint = "Bio"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_department"
            android:layout_weight="0.10"
            android:textSize="25sp"
            android:hint="Degree"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_year"
            android:hint="Year"
            android:layout_weight="0.10"
            android:textSize="25sp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profile_hostel"
            android:layout_weight="0.10"
            android:textSize="25sp"
            android:hint="Hostel"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_optionsbtn"
            android:onClick="profile_onclickoptions"
            android:layout_weight="1" />

        <Button
            android:text="profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_profilebtn"
            android:layout_weight="1" />

        <Button
            android:text="feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_feedbtn"
            android:layout_weight="1"
            android:onClick="profile_onclickfeed" />

        <Button
            android:text="chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_chatbtn"
            android:onClick="profile_onclickchat"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
